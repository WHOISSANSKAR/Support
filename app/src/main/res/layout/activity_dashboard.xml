<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Sanskar"
            android:textSize="32sp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

    <!-- Display the shape here -->
    <FrameLayout
        android:id="@+id/raiseTicketLayout"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="50dp"
        android:paddingEnd="50dp"
        android:clickable="true"
        android:focusable="true"
        android:transitionName="raise_ticket_transition">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/right_corner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raise a ticket"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/trackStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="75dp"
        android:paddingStart="50dp"
        android:clickable="true"
        android:focusable="true"
        android:transitionName="track_status_transition">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/left_corner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Status"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"/>

    </FrameLayout>


</LinearLayout>